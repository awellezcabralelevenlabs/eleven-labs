{% extends 'base.html.twig' %}

{% block title %}Create a product{% endblock %}

{% block body %}

    <div class="mb-3">
        <a href="{{ path('product') }}">< Back</a>
    </div>

    <main class="form-create">
        {{ form_start(createFormProduct) }}
            {{ form_row(createFormProduct.title) }}
            {{ form_row(createFormProduct.description, {
                label: 'Description'
            }) }}
            {{ form_row(createFormProduct.price) }}
            {{ form_row(createFormProduct.city) }}
            {{ form_row(createFormProduct.pictures) }}
            <button class="w-100 btn btn-lg btn-primary" type="submit">Create</button>
        {{ form_end(createFormProduct) }}
    </main>
{% endblock %}
